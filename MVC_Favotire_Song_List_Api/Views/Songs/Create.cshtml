@model MVC_Favotire_Song_List_Api.Models.Song

@{
    ViewData["Title"] = "Create";
}

<h1 style="padding-bottom: 50px">Agregar Canción</h1>

<h6 class="text-secondary">A continuación, ingresa la información de la canción a agregar:</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Title" class="control-label">Nombre</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Group" class="control-label">Grupo/Autor</label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Year" class="control-label">Año de Publicación</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Genre" class="control-label">Genero Musical</label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir Canción" class="btn btn-success" /> |
                <a asp-action="Index" class="btn-outline-secondary">
                    <button type="button" class="btn btn-outline-secondary">Regresar a mi Lista</button>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
