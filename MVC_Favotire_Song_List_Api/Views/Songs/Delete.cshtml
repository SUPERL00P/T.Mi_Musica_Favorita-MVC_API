@model MVC_Favotire_Song_List_Api.Models.Song

@{
    ViewData["Title"] = "Delete";
}

<h1 style="padding-bottom: 50px">Eliminar Canción</h1>

<h6 class="text-secondary">Canción a Eliminar:</h6>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Title)*@
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Group)*@
            Grupu/Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Year)*@
            Año de Estreno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Genre)*@
            Genero Musical
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">
            <button type="button" class="btn btn-outline-secondary">Regresar a mi lista</button>
        </a>
    </form>
</div>
