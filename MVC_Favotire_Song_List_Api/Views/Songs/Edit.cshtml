@model MVC_Favotire_Song_List_Api.Models.Song

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-bottom: 50px">Editar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Title" class="control-label">Titulo</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Group" class="control-label">Grupo/Autor</label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Year" class="control-label">Año de Estreno</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <label asp-for="Genre" class="control-label">Genero Musical</label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 30px">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-action="Index">
                    <button type="button" class="btn btn-outline-secondary">Regresar a mi Lista</button>
                </a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
